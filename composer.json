{
  "name": "ifaisalalam/authentication-demo",
  "description": "A project demonstrating a different approach to two-factor authentication.",
  "homepage": "http://github.com/slimphp/Slim-Skeleton",
  "license": "MIT",
  "authors": [
    {
      "name": "Faisal Alam",
      "email": "faisal.11616526@lpu.in"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "slim/slim": "^3.1",
    "slim/php-view": "^2.0",
    "monolog/monolog": "^1.17",
    "slim/twig-view": "^2.4",
    "vlucas/phpdotenv": "^2.5",
    "illuminate/database": "^5.7",
    "respect/validation": "^1.1",
    "illuminate/filesystem": "^5.7",
    "illuminate/translation": "^5.7",
    "illuminate/validation": "^5.7",
    "slim/csrf": "^0.8.3",
    "slim/flash": "^0.4.0",
    "mikica/clickjacking-middleware": "^1.07",
    "illuminate/session": "^5.7",
    "illuminate/config": "^5.7",
    "dflydev/fig-cookies": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": ">=4.8 < 6.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout" : 0
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public",
    "test": "phpunit"
  }
}
