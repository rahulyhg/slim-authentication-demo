{% extends '/templates/app.twig' %}

{% block content %}
    <div class="row justify-content-md-center">
        <div class="col-md-6">
            <div class="card center-block">
                <div class="card-header">
                    Register
                </div>
                <div class="card-body">

                    {% if flash.getMessages() %}
                        <div class="alert alert-danger">
                            {{ flash.getMessage('error') | first }}
                        </div>
                    {% endif %}

                    <form action="{{ path_for('auth.register') }}" method="post" autocomplete="off">
                        <div class="form-group{{ errors.name ? ' has-error' : ''}}">
                            <label for="name">Name</label>
                            <input class="form-control{{ errors.name ? ' is-invalid' : ''}}" type="text" name="name" value="{{ old.name }}" id="name" placeholder="Enter your name" required>

                            {% if errors.name %}
                                <span class="invalid-feedback">{{ errors.name | first }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group{{ errors.email ? ' has-error' : ''}}">
                            <label for="email">Email</label>
                            <input class="form-control{{ errors.email ? ' is-invalid' : ''}}" type="email" name="email" value="{{ old.email }}" id="email" placeholder="name@example.com" required>

                            {% if errors.email %}
                                <span class="invalid-feedback">{{ errors.email | first }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group{{ errors.password ? ' has-error' : ''}}">
                            <label for="password">Password</label>
                            <input class="form-control{{ errors.password ? ' is-invalid' : ''}}" type="password" name="password" id="password" placeholder="Enter password" required>

                            {% if errors.password %}
                                <span class="invalid-feedback">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>

                        {{ csrf.field | raw }}

                        <button class="btn btn-default" type="submit">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}